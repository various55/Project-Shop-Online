@model Data.DTO.UserDTO

<div class="update-info">
    <form id="formUpdateBillInfo">
        <input type="number" name="ID" value="0" class="form-control hidden" readonly hidden />
        <div class="row m-0">
            <div class="col-md-6">
                <label>Họ tên</label>
                <input type="text" value="@Model.Name" name="Name" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-6">
                <label>Địa chỉ Email</label>
                <input type="text" value="@Model.Email" name="Email" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-6">
                <label>Số điện thoại</label>
                <input type="text" value="@Model.Mobile" name="Mobile" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-6">
                <label>Địa chỉ</label>
                <input type="text" value="@Model.Address" name="Address" class="form-control" />
                <div class="error"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button class="btn-update btn btn-primary" type="button" data-dismiss="modal" onclick="AddOrUpdate('formUpdateBillInfo', '/User/EditBillInfo','/User/InfoUser', 'user-info');"> Sửa thông tin</button>
        </div>
    </form>
</div>

