@model Data.DTO.UserPasswordDTO

<div class="change-password">
    <form id="formUpdateChangePassword">
        <input type="number" name="ID" value="0" class="form-control hidden" readonly hidden />
        <div class="row m-0">
            <div class="col-md-8">
                <label>Mật khẩu hiện tại</label>
                <input type="password" value="" name="Password" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-8">
                <label>Mật khẩu mới</label>
                <input type="password" value="" name="NewPassword" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-8">
                <label>Số điện thoại</label>
                <input type="password" value="" name="ConfirmNewPassword" class="form-control" />
                <div class="error"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button class="btn-update btn btn-primary" type="button" data-dismiss="modal" onclick="AddOrUpdate('formUpdateChangePassword', '/User/ChangePassword','', '');">Đổi mật khẩu</button>
        </div>
    </form>
</div>

