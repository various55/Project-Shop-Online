@model Data.DTO.UserDTO

@{
}

<div class="em-wrapper-main">
    <div class="container container-main">
        <div class="em-inner-main">
            <div class="em-wrapper-area02"></div>
            <div class="em-main-container em-col1-layout">
                <div class="row">
                    <div class="em-col-main col-sm-24">
                        <div class="account-create">
                            <div class="page-title">
                                <h1>Tạo tài khoản</h1>
                            </div>
                            <form method="post" id="form-validate">
                                <div class="fieldset">
                                    <input type="hidden" name="success_url" value="" />
                                    <input type="hidden" name="error_url" value="" />
                                    <h2 class="legend">Thông tin người dùng</h2>
                                    <ul class="form-list">
                                        <li class="fields">
                                            <div class="customer-name-middlename">
                                                <div class="field name-lastname">
                                                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-box">
                                                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Trương Việt Anh..." } })
                                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="fields">
                                            <div class="customer-name-middlename">
                                                <div class="field name-lastname">
                                                    @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-box">
                                                        @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ao Sen,Hà Đông..." } })
                                                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="fields">
                                            <div class="customer-name-middlename">
                                                <div class="field name-lastname">
                                                    @Html.LabelFor(m => m.Mobile, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-box">
                                                        @Html.EditorFor(m => m.Mobile, new { htmlAttributes = new { @class = "form-control", @placeholder = "0852955189..." } })
                                                        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="fields">
                                            <div class="customer-name-middlename">
                                                <div class="field name-lastname">
                                                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-box">
                                                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "truongvietanh221@gmail.com..." } })
                                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="fields">
                                            <div class="customer-name-middlename">
                                                <div class="field name-lastname">
                                                    @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-box">
                                                        @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "vanh55..." } })
                                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="fields">
                                            <div class="customer-name-middlename">
                                                <div class="field name-lastname">
                                                    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label" })
                                                    <div class="input-box">
                                                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <button class="btn btn-danger">Đăng ký</button>
                            </form>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- /.em-wrapper-main -->
