@model IEnumerable<Data.DTO.OrderDTO>

@{
    ViewBag.Title = "Index";
}

@section MyCss{
    <link href="~/Content/admin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet" />
}
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div id="tableProducts" class="row clearfix dataTable">
            <!-- Data đổ vào đây-->
            @Html.Action("Load","Base")
        </div>
        <form id="FormOrder">
            <div class="form-group row">
                <label for="staticName" class="col-sm-2 col-form-label">Tên khác hàng</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" name="Name" id="staticName" value="email@example.com">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticAddress" class="col-sm-2 col-form-label">Địa chỉ</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" name="Address" id="staticAddress" value="email@example.com">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" name="Mobile" id="staticEmail" value="email@example.com">
                </div>
            </div>
        </form>
        <!-- #END# Exportable Table -->
    </div>


</section>

@section js{

}
@section MyJs{
    <script>
        $(document).ready(function () {
            $('#example').DataTable();  
        });

    </script>
}