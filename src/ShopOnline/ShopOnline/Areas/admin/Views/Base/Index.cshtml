@model IEnumerable<Data.DTO.OrderDTO>

@{
    ViewBag.Title = "Index";
}

@section MyCss{
    <link href="~/Content/admin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet" />
}
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div id="tableProducts" class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Danh sách sản phẩm
                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <input type="button" class="btn btn-danger" value="Thêm mới" onclick="location.href='@Url.Action("Create", "Products")'" />
                        </ul>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped table-bordered table-hover dataTable js-exportable" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Office</th>
                                        <th>Age</th>
                                        <th>Start date</th>
                                        <th>Salary</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Hope Fuentes</td>
                                        <td>Secretary</td>
                                        <td>San Francisco</td>
                                        <td>41</td>
                                        <td>2010/02/12</td>
                                        <td>$109,850</td>
                                        <td>
                                            @Html.ActionLink("Chi tiết", "Detail", new { @class = "btn-detail" }) | 
                                            @Html.ActionLink("Sửa", "Edit", new { @class = "btn-edit" }) |
                                            @Html.ActionLink("Xóa", "Delete", new { @class = "btn-delete" }) |
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- #END# Exportable Table -->
    </div>


</section>

@section js{

}
@section MyJs{
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}