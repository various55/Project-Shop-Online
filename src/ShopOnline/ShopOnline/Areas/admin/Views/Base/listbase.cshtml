@model IEnumerable<Data.DTO.OrderDTO>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Danh sách sản phẩm
            </h2>
            <ul class="header-dropdown m-r--5">
                <button class="btn btn-danger btn-addOrUpdate" data-toggle="modal" data-target="#modalAdd" onclick="setDataForm(0,'/admin/Base/FromCreateUpdate','add-or-edit')">Thêm mới</button>
            </ul>
        </div>
        <div class="body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered table-hover dataTable js-exportable" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                            <th>@Html.DisplayNameFor(model => model.Payment)</th>
                            <th>@Html.DisplayNameFor(model => model.Total) date</th>
                            <th>@Html.DisplayNameFor(model => model.Fee)</th>
                            <th>@Html.DisplayNameFor(model => model.Discount)</th>
                            <th>@Html.DisplayNameFor(model => model.ConfirmStatusName)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                                <td>@Html.DisplayFor(modelItem => item.Payment)</td>
                                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fee)</td>
                                <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                                <td>@Html.DisplayFor(modelItem => item.ConfirmStatusName)</td>
                                <td>
                                    <button class="btn btn-edit" type="button" data-toggle="modal" data-target="#modalAdd" onclick="setDataForm(@item.ID, '/admin/Base/FromCreateUpdate', 'add-or-edit')"><i class="fas fa-edit text-success"></i></button>
                                    <button class="btn btn-delete" data-id="@item.ID" title="Xóa" onclick="Delete(@item.ID,'/admin/Base/Delete','/admin/Base/listbase','dataTable')"><i class="fas fa-trash-alt text-danger"></i></button>
                                    <button class="btn btn-details" data-id="1" data-toggle="modal" data-target="#myModal">
                                        <i class="fas fa-info-circle text-primary"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modalAdd" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-gradient-green">
                <h4 class="modal-title text-white"> Cập nhập thông tin</h4>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="add-or-edit">


                </div>
            </div>
            <div class="modal-footer">
                @*<button class="btn-createEdit btn btn-success" onclick="AddOrEdit('formAddOrEdit' , '/Building/AddOrEdit' , '/Building/ListBuilding' , 'get-data')"> Thêm mới</button>*@
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>