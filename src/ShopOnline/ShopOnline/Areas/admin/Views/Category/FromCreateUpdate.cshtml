


<div class="update-info">
    <form id="formAddOrUpdate">
        @if (ViewBag.data == null)
        {
            <input type="number" name="ID" value="0" class="form-control hidden" readonly hidden />
            <div class="row m-0">
                <div class="col-md-3">
                    <label>Tên Danh mục</label>
                    <input type="text" value="" name="Name" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-3">
                    <label>Trạng thái</label>
                    <input class="form-check-input" type="checkbox" name="Status" value="" />
                    Đã có mặt hàng
                    
                    <div class="error"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn-update btn btn-primary" type="button" onclick="AddOrUpdate('formAddOrUpdate','/admin/Category/AddOrUpdate','/admin/Category/listbase','dataTable')"> Thêm mới</button>
            </div>
        }
        else
        {
            <input type="number" name="ID" value="@ViewBag.data.ID" class="form-control hidden" readonly hidden />
            <div class="row m-0">
                <div class="col-md-3">
                    <label>Tên danh mục</label>
                    <input type="text" value="@ViewBag.data.Name" name="Name" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-3">
                    <label>Trạng thái</label>
                    <span>Đã có mặt hàng</span>
                         @if (ViewBag.data.Status == true) {<input class="form-check-input" type="checkbox" name="status" value="true" checked/>}
                        
                        else { <input class="form-check-input" type="checkbox" name="Status" value="false"/>}
                    
                   
                    <div class="error"></div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn-update btn btn-primary" type="button" onclick="AddOrUpdate('formAddOrUpdate','/admin/Category/AddOrUpdate','/admin/Category/listbase','dataTable')"> Cập nhập</button>
            </div>
        }
    </form>
</div>

