@model IEnumerable<Data.DTO.TransactionDTO>

@{ var count = 1;}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Danh sách Order
            </h2>
        </div>
        <div class="body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered table-hover dataTable js-exportable" style="width:100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>User</th>
                            <th>Tên khách hàng</th>
                            <th>Địa chỉ</th>
                            <th>Tổng tiền</th>
                            <th>Thời gian order</th>
                            <th>Thời gian xác nhận</th>
                            <th>Ghi chú</th>
                            <th>Trạng thái</th>
                            <th>Duyệt bởi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@(item.Order.UserMember == null ? "Guest":"Member")</td>
                                <td>@Html.DisplayFor(modelItem => item.Order.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Order.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.Order.Total)</td>
                                <td>@Html.DisplayFor(modelItem => item.Order.CreatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreateAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                <td>@(item.Status == true ? "Đơn hàng được xác nhận":"Đơn hàng bị hủy")</td>
                                <td>@Html.DisplayFor(modelItem => item.User.Username)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/Content/admin/js/pages/tables/jquery-datatable.js"></script>
<script>
    $(document).ready(() => {
        $(document).ready(function () {
            $('#example').DataTable();
        });
    })
</script>